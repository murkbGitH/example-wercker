{
    "variables": {
        "vm_name": null,
        "iso_url": null,
        "iso_checksum": null,
        "ius_release_url": null
    },
    "builders": [{
        "type": "virtualbox-iso",
        "vm_name": "{{user `vm_name`}}",
        "output_directory": "./output~/{{user `vm_name`}}-box/",

        "headless": false,
        "disk_size": "20480",

        "iso_url": "{{user `iso_url`}}",
        "iso_checksum_type": "md5",
        "iso_checksum": "{{user `iso_checksum`}}",

        "ssh_username": "root",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_wait_timeout": "30m",

        "http_directory": "./",

        "boot_wait": "10s",
        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `vm_name`}}/ks.cfg<enter><wait>"
        ],

        "shutdown_command": "/sbin/halt -h -p",
        "shutdown_timeout": "1m",

        "guest_os_type": "RedHat_64",
        "format": "ovf",

        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "virtualbox_version_file": ".vbox_version",
        "hard_drive_interface": "sata",

        "vboxmanage":[
            ["modifyvm", "{{.Name}}", "--memory", "1024"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ],

        "vboxmanage_post":[
            ["modifyvm", "{{.Name}}", "--memory", "512"]
        ]
    }],
    "provisioners": [{
        "type": "shell",
        "environment_vars": [
            "ius_release_url={{user `ius_release_url`}}"
        ],
        "scripts": [
            "./scripts/base.sh",
            "./scripts/git.sh",
            "./scripts/vagrant.sh",
            "./scripts/virtualbox.sh",
            "./scripts/fin.sh"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "compression_level": 6,
        "keep_input_artifact": false,
        "output": "./output~/{{user `vm_name`}}.box"
    }]
}
